<% include header %>
<div class="container mt-5">
<% candidatos.forEach((item) => { %>
  <section>
    <div class="container py-3">
      <div class="card text-center">
        <div class="row ">
          <div class="col-md-4">
              <img src="<%=item.imagenPartido%>">
            </div>
            <div class="col-md-8 px-3 align-items-center d-flex justify-content-center">
              <div class="card-block px-3">
                <h4 class="card-title"><%=item.nombrePartido%></h4>
                <p class="card-text"><%=item.nombreCandidato%></p>
                <!-- <a href="#" class="btn btn-primary">Read More</a> -->
                <div class="progress">
                  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="progressBarCandidato" style="width: <%=item.cantidadVotos * 100 / totalVotos %>%">Votos: <%= item.cantidadVotos %> </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
<br>
<% }) %>
</div>

<% include footer %>